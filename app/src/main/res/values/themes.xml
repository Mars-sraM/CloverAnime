<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CloverAnime" parent="Theme.Material3.DayNight.NoActionBar">


        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CloverAnime" parent="Base.Theme.CloverAnime" />
    <style name="SplashTheme" parent="Base.Theme.CloverAnime">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#3f444b</item>
    </style>
    <style name="BottomNavigationView.Active" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="CustomSearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/text_color_principal</item>
        <item name="colorControlNormal">#616161</item>
        <item name="android:textColorHint">#616161</item>
    </style>
    <style name="RadioButtonStyle" parent="Theme.AppCompat.DayNight">
        <item name="buttonIconTint">#ffffff</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="dropdown"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/Subtittle_color</item>
        <item name="boxBackgroundColor">@color/background_color_app</item>
        <item name="android:textColorHint">@color/text_color_principal</item>
        <item name="hintTextColor">@color/text_color_principal</item>

    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_sheet_dialog</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/border_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAnimePortada"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:background="@color/black">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="8dp">
        <TextView
            android:id="@+id/animeTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="3dp"
            android:ellipsize="end"
            android:textSize="15sp"
            android:fontFamily="@font/asap"
            android:maxLines="3"
            android:textStyle="bold"
            android:textColor="@color/text_color_principal"
            tools:text="Shimoneta to Iu Gainen ga Sonzai Shinai Taikutsu na Sekai"/>
        <TextView
            android:id="@+id/animeSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="3dp"
            android:fontFamily="@font/asap"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/text_color_principal"
            tools:text="Shimoneta to Iu Gainen ga Sonzai Shinai Taikutsu na Sekai, Shimoneta to Iu Gainen ga Sonzai Shinai Taikutsu na Sekai"/>


        <TextView
            android:id="@+id/tvanimeProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:textColor="@color/Subtittle_color"
            android:textSize="13sp"
            android:fontFamily="@font/asap"
            android:layout_marginTop="4dp"
            tools:text="Anime"/>
    </LinearLayout>

</LinearLayout>


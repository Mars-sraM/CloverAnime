<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.view.fragments.FavoriteFragment">

    <Button
        android:id="@+id/btnBorrarData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_principal"
        android:backgroundTint="@color/color_botoms"
        android:text="Borrar Todo"
        android:visibility="gone"
        android:textSize="15sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAnimesFavorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        tools:spanCount="2"
        tools:listitem="@layout/item_mylist"
        tools:itemCount="3"
        tools:reverseLayout="true"
        tools:stackFromEnd="true"
        >
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
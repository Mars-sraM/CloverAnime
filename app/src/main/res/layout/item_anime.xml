<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:minHeight="@dimen/ivEpisodeEmision_height"
    android:layout_marginVertical="10dp"
    android:orientation="horizontal"
    android:background="@drawable/border_radius">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/ivAnimePortada"
            android:layout_width="@dimen/ivEpisodeEmision_width"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/black">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCapNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap"
            android:layout_marginHorizontal="4dp"
            android:textColor="@color/Subtittle_color"
            android:textSize="@dimen/tvCapNumeroType"
            tools:text="Anime" />

        <TextView
            android:id="@+id/animeTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="50dp"
            android:ellipsize="end"
            android:fontFamily="@font/asap"
            android:maxLines="2"
            android:textColor="@color/text_color_principal"
            android:textSize="@dimen/animeTittle"
            android:textStyle="bold"
            tools:text="Shimoneta to Iu Gainen ga Sonzai Shinai Taikutsu na Sekai"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_type"
                app:tint="@color/Subtittle_color" />

            <TextView
                android:id="@+id/tvAnimeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="@dimen/tvCapNumeroType"
                android:fontFamily="@font/asap"
                android:textColor="@color/Subtittle_color"
                tools:text="Anime" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


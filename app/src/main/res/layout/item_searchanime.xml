<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:layout_marginStart="6dp"
    android:layout_weight="1"
    android:background="@drawable/border_radius"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageSearch_height"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/ivAnimePortada"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageSearch_height"
            android:scaleType="centerCrop"
            android:background="@color/black">

        </ImageView>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/animeTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="3dp"
        android:ellipsize="end"
        android:maxLines="2"

        android:textColor="@color/text_color_principal"
        tools:text="Shimoneta to Iu Gainen ga Sonzai Shinai Taikutsu na Sekai"/>

    <TextView
        android:id="@+id/tvanimeType"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/Subtittle_color"
        android:textSize="12sp"
        tools:text="Anime"/>
</LinearLayout>
